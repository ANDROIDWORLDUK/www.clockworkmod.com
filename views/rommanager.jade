include topbar

header.jumbotron.padded.masthead
  .inner
    .container
      h1 ROM Manager
      p.lead ROMs and Recovery Images

.container
  .section
    .row
      .span8.offset4.columns(align='center')
        a(href='http://download.clockworkmod.com/recoveries/RomManager.apk')
          img(src='/images/rommanager-icon.png')
        h3
          a(href='http://download.clockworkmod.com/recoveries/RomManager.apk') ROM Manager APK
    .row
      .span1
        br
    .row
      .span12.offset2
        table.zebra-striped
          thead
            th 
              h5 Device Name
            th
              h5 ROMs
            th
              h5 Download Recovery
          tbody
            - for device in devices
              tr
                td=device.name
                td
                  a(href='/rommanager/developers/' + device.key + '?name=' + encodeURIComponent(device.name)) Download ROMs
                td
                  a(href=device.downloadUrl)=device.version
